    <imports>
        <import resource="twig.xml" />
    </imports>
    <parameters>
        <parameter key="lyssal.entity.decorator.manager.class">Lyssal\Entity\Decorator\DecoratorManager</parameter>
        <parameter key="lyssal.entity.appellation.manager.class">Lyssal\Entity\Appellation\AppellationManager</parameter>
    </parameters>
    <services>
        <service id="lyssal.decorator" class="%lyssal.entity.decorator.manager.class%" public="true" />
        <service id="lyssal.appellation" class="%lyssal.entity.appellation.manager.class%" public="true" />
    </services>
</container>
